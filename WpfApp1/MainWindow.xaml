<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" Text="Player Name:" VerticalAlignment="Top"/>
        <TextBox x:Name="PlayerNameTextBox" HorizontalAlignment="Left" Margin="120,20,0,0" VerticalAlignment="Top" Width="200" TextChanged="PlayerNameTextBox_TextChanged"/>

        <TextBlock HorizontalAlignment="Left" Margin="20,60,0,0" Text="Age:" VerticalAlignment="Top"/>
        <TextBox x:Name="AgeTextBox" HorizontalAlignment="Left" Margin="120,60,0,0" VerticalAlignment="Top" Width="200"/>

        <TextBlock HorizontalAlignment="Left" Margin="20,100,0,0" Text="Team:" VerticalAlignment="Top"/>
        <TextBox x:Name="TeamTextBox" HorizontalAlignment="Left" Margin="120,100,0,0" VerticalAlignment="Top" Width="200" TextChanged="TeamTextBox_TextChanged"/>

        <Button Content="Save Player" HorizontalAlignment="Left" Margin="120,140,0,0" VerticalAlignment="Top" Click="SavePlayerButton_Click"/>
    </Grid>
</Window>
